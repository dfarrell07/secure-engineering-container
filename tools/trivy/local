alias trivy='docker run -v $PWD:/SEC:ro,Z quay.io/open-cluster-management/sec:latest trivy'
alias trivy-fs='docker run -v $PWD:/SEC:ro,Z quay.io/open-cluster-management/sec:latest trivy fs --ignore-unfixed'
function trivy-image { mkdir /tmp/trivytmp-$1; docker save -o /tmp/trivytmp/tmp-trivy-$1.tar $1; docker run -v /tmp/trivytmp-$1:/SEC:ro,Z quay.io/open-cluster-management/sec:latest trivy image --input tmp-trivy-$1.tar --ignore-unfixed; rm -r /tmp/trivytmp-$1 }
